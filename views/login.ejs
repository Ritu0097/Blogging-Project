<html>
  <head>
    <title>Login</title>
    <%- include('./partials/style') %>
  </head>
  <body>
    <div class="wrapper">
    <h2>Login Page</h2>
     <% if(message){%>
    <p><%= message %></p>
    <% } %>
    <form class="user-form" method="POST" action="http://localhost:3000/login">
      <input type="email" name="email" placeholder="Enter Your Email" />
      <br /><br />
      <input
        type="password"
        name="password"
        placeholder="Enter Your Password"
      />
      <br /><br />
      <input type="submit" value="Submit" />
    </form>
    <a href="/signup">Signup</a>
  </div>
  </body>
</html>
