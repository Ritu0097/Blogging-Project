<html>
  <head>
    <title>Add Blog</title>
    <%- include('./partials/style') %>
  </head>
  <body>
    <%- include('./partials/topbar.ejs') %>
    <div class="wrapper">
        <h2>Add Blog</h2>
    <form method="POST" class="blog-form" action="/createBlog">
        <input type="text" placeholder="Enter Blog Title Here" name="title">
        <br><br>
        <textarea name="body" placeholder="Enter blog body here" rows="30"></textarea>
        <br><br>
        <input type="submit"value="Add">
        <% if(message){%>
          <p><%= message %></p>
          <% } %>
    </form>
</div>
  </body>
</html>
